<p>
  <b>Name:</b>
  <%= @board.name %> 
</p>

<h1>Listing posts</h1>

<table>
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= link_to 'Show', board_post_path(@board,post) %></td>
    <td><%= link_to 'Edit', edit_admin_board_post_path(@board,post) %></td>
    <td><%= link_to 'Destroy', admin_board_post_path(@board,post), :confirm => 'Are you sure?', :method => :delete %></td>
  </tr>
<% end %>
</table>

